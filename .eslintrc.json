{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "warn",
    "no-unused-vars": "warn",
    "space-before-function-paren": ["error", "never"]
  },
  "globals": {
    "currentUser": "writable",
    "userAds": "writable",
    "userTransactions": "writable",
    "showMessage": "readonly",
    "hideMessage": "readonly",
    "loadUserData": "readonly",
    "loadDashboardData": "readonly",
    "loadAdsData": "readonly",
    "loadTransactionsData": "readonly",
    "logout": "readonly"
  }
}